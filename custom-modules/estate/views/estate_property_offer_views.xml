<?xml version="1.0" encoding="UTF-8"?>
<!-- the root elements of the data file -->
<odoo>
    <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">Offers</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <tree string="Listing">
                <field name="price" string="Price"/>
                <field name="status" string="Status"/>
                <field name="partner_id" string="Partner"/>
                <field name="create_date"/>
                <field type="object" name="validity"/>
                <field name="date_deadline" type="object"/>
                <button name="confirm_offer" string="Confirm" type="object" icon="fa-check"/>
                <button name="refuse_offer" string="Refuse" type="object" icon="fa-x"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">Form</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" string="Price"/>
                        <field name="status" string="Status"/>
                        <field name="validity" string="Validity"/>
                        <field name="date_deadline" string="Deadline"/>
                        <field name="partner_id" string="Partner"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>