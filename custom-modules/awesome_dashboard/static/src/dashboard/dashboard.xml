<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="{controlPanel: {} }" className="'o_dashboard h-100'">
             <t t-set-slot="layout-buttons">
                <button t-on-click="openCustomers" class="btn btn-primary">Customers </button>
                <button t-on-click="openLeeds" class="btn btn-secondary">Leeds </button>
                <button t-on-click="showModal"><i class="fa fa-gear"></i></button>
            </t>
             <t t-foreach="this.items" t-as="item" t-key="item.id">
                <t t-set="itemProps" t-value="item.props ? item.props(this.data):{'data':this.data}"/>
                <t t-if="this.config.showItems.includes(item.id)">
                    <t t-component="item.Component" t-props="itemProps"/>
                </t>
             </t>
             <t t-if="modal.show">
                <ConfigModal update.bind="updateConfig" config="this.itemInfo" close.bind="closeModal"/>
             </t>
        </Layout>
    </t>

</templates>
