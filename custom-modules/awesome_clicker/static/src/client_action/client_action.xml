<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_clicker.client">
       <div class="container">
            <div class="d-flex flex-row align-items-center p-4" style="gap:15px">
                <label>Clicks : <ClickValue value="this.clicker.counter"/></label>
                <button class="btn btn-primary" data-clicker-increment="true" t-on-click="increment">Increment</button>
                <br/>
            </div>
             <h4>Bots</h4>
             <div class="d-flex flex-row flex-wrap gap-3 mb-3">
                <t t-foreach="this.bots" t-as="id" t-key="id">
                    <div class="card">
                        <h5 class="card-header" t-attf-data-tooltip="{{getBot(id).increment*10}} clicks per 10s">
                            <t t-out="getBot(id).purchased"/>x <t t-out="getBot(id).type"/>s 
                            (<t t-out="getBot(id).increment"/>t Clicks / 10 Seconds )
                            <i class="fa fa-android"></i>
                            </h5>
                        <div class="card-body">
                            <button t-on-click="()=>this.buyBot(id)" class="btn btn-primary" t-att-disabled="!this.canBuyBot(id)">
                                Buy a <t t-out="getBot(id).type"/> (1000 Clicks)
                            </button>
                        </div>
                    </div>
                </t>
                 <div class="card">
                    <h5 class="card-header">
                        <t t-out="this.clicker.multipler"/>x Bot Multiply Factor 
                        ( x <t t-out="this.clicker.multipler"/> for every bot clicks )
                        <i class="fa fa-android"></i>
                    </h5>
                    <div class="card-body">
                        <button t-on-click="buyMultipler" class="btn btn-primary" t-att-disabled="!this.canBuyMultipler">
                            Buy a bot multiply factor (50000 Clicks)
                        </button>
                    </div>
                </div>
             </div>

       </div>
    </t>

</templates>
